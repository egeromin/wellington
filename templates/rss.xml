<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
    <channel>
        {{#with core_data}}
		<title>{{title}}</title>
		<link>{{home}}</link>
        <description>{{description}}</description>
        {{/with}}
        {{#each posts}}
        <item>
            <title>{{title}}</title>
            <link>{{link}}</link>
            <author>{{author}}</author>
            <pubDate>{{as-date first_published rss}}</pubDate>
        </item>
        {{/each}}
    </channel>
</rss>
